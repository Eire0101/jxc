<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.i.dao.SaleDao">
    <select id="getSaleCount" resultType="int">
        select count(*) from tab_total_sale
    </select>
    <insert id="addSaleTotal" parameterType="java.util.Map">
        insert into tab_total_sale(saleno,saletime,operator,buyman,buymoney,buystatus) values
        (#{saleno},now(),#{operator},#{buyman},#{buymoney},'购买完成')
    </insert>
    <insert id="addSaleDetail" parameterType="java.util.List">
        insert into tab_detail_sale(saleno,goodsno,saleamount,subtotal,createtime,isback) values
        <foreach collection="list" item="item" separator=",">
            (#{item.saleno},#{item.goodsno},#{item.saleamount},#{item.subtotal},now(),'购买完成')
        </foreach>
    </insert>
</mapper>